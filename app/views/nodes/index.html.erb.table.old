<h1>Physical Layout</h1>


<table>
<% @layout.max.times do |rank| %> <!-- #fullest rack -->
  <tr>
  <% @layout.size.times do |rack| %> <!-- #number of racks, assumes sequential rack numbering  -->
    <td>
    <% if location = Location.find_by_rack_and_rank(rack,rank) %>
      <%= link_to(image_tag("rrd_graphs/#{location.node.hostname}.png"),location.node) %>
    <% end %>
    </td>
  <% end %>
  </tr>
<% end %>
</table>

